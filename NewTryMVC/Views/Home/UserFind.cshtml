@model User
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <form method="post" asp-controller="Home" asp-action="UserFind">
        <input type="search" name="find"/>
        <input type="submit" value="Найти" />
    </form>
    <a asp-controller="Home" asp-action="UserEdit">Добавить пользователя</a>

    <div class="text-center">
            <div>
                @Model.Id @Model.Name
                <a asp-controller="Home" asp-action="UserEdit" asp-route-id="@Model.Id">Редактировать</a>
                <form method="post" asp-controller="Home" asp-action="UserDelete">
                    <input type="hidden" value="@Model.Id" name="Id"/>
                    <input type="submit" value="Удалить"/>
                </form>
            </div>
</div>
</div>
